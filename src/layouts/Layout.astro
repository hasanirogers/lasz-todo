---
// kemet is a global design system so we load it styles everywhere
import 'kemet-ui/styles/kemet.base.css';
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="description" content="The world's first LASZ app" />
		<link rel="preload" as="image" href="/logo.webp" fetchpriority="high" />
		<title>The world's first LASZ app</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	:root {
    --kemet-color-error: var(--kemet-color-red-600);
    --kemet-color-success: var(--kemet-color-green-600);
	}

  @font-face {
    font-family: 'bootstrap-icons';
    font-display: swap; /* TODO: add font-display:swap; to Kemet UI */
  }

  html {
    font-family: "Montserrat", sans-serif;
		font-optical-sizing: auto;
		font-weight: 400;
		font-style: normal;
		line-height: 2;
		color: rgb(var(--kemet-color-gray-300));
		background-color: rgb(var(--kemet-color-gray-800));
  }

	body {
		display: flex;
		align-items: center;
		justify-content: center;
		flex-direction: column;
		min-height: 100vh;
		margin: 0;
		padding: 2rem;
	}

	img {
		max-width: 100%;
	}
</style>
